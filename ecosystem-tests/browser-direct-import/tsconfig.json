{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": false,
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*", "public/index.js"],
  "exclude": ["node_modules/*"]
}
